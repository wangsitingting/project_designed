/* pages/commodity/purchase.wxss */
.exhibition-container{
  width:100%;
  display: flex;
  flex-direction: row;
  height: 92vh;
}
.navigator{
  width:20%;
  height:92vh;
  display: flex;
  flex-direction: column;
  background-color: #dcdcdc;
}
.navigator-item{
  width: 100%;
  text-align: center;
  height: 50rpx;
  font-size: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.navigator-item-choose{
  width: 100%;
  text-align: center;
  height: 50rpx;
  font-size: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: white;
}
.list{
  width:80%;
  height:92vh;
  display: flex;
  flex-direction: column;
}
.item{
   display: flex;
   flex-direction: row;
   padding: 20rpx;
   margin-left: 50rpx;
   margin-right: 50rpx;
   border-bottom: 1rpx solid #dcdcdc;
}
.item-content{
  height:150rpx;
  width:150rpx;
  padding-left: 50rpx;
}
.name{
   font-size: 30rpx;
}
.price{
   font-size: 30rpx;
   color: red;
   position:relative;
   top: 50rpx;
}
.button{
  width:120rpx;
  height:50rpx;
  margin-top: 50rpx;
  font-size: 20rpx;
}
.charge-bar{
  width:100%;
  height:8vh;
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid #dcdcdc;
}
.image{
  height:4vh;
  width:10vw;
  margin-top: 2vh;
  margin-left: 4vw;
  margin-right:4vw;
}
.charge-content{
  display: flex;
  flex-direction: row-reverse;
  width:82vw;
}
.charge-price{
  font-size: 30rpx;
  height:8vh;
  padding-right: 20vw;
  display: flex;
  justify-content: center;
  align-items: center;
}
.charge-confirm{
  width:200rpx;
  height:100%;
  text-align: center;
  background-color: #F03033;
  margin: 0;
  color: white;
}