<!--pages/consume/scene/scene.wxml-->
<map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="15" show-location style="width: 100%; height: 100vh;" markers='{{markers}}' bindmarkertap='markerTap'>
  <cover-view class="{{discription?'discription-show':'discription-hide'}}">
    <cover-view class="button" bindtap='commodityDetail'>详情</cover-view>
    <cover-view class="content">
      <cover-view class="title">{{title}}</cover-view>
      <cover-view class="content-text">{{content1}}</cover-view>
      <cover-view class="content-text">{{content2}}</cover-view>
    </cover-view>
  </cover-view>
</map>