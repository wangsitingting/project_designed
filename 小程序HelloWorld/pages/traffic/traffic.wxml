<map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="15" show-location style="width: 100%; height: 100vh;" markers='{{markers}}' bindmarkertap='markerTap'>
  <cover-view class="flex-wrp">
    <cover-view class="flex-item" bindtap='carCharge'>充电桩</cover-view>
    <cover-view class="flex-item" bindtap='carShare'>拼车</cover-view>
    <cover-view class="flex-item" bindtap='carParking'>停车</cover-view>
    <cover-view class="flex-item" bindtap='sportRecommend'>运动推荐</cover-view>
  </cover-view>
  <cover-view class="{{chargeDiscription?'charge-discription-show':'charge-discription-hide'}}">
    <cover-view class="title">{{chargeTitle}}</cover-view>
    <cover-view class="content">
      <cover-view class="content-text">{{chargeContent1}}</cover-view>
      <cover-view class="content-text">{{chargeContent2}}</cover-view>
    </cover-view>
  </cover-view>
  <cover-view class="{{shareDiscription?'share-discription-show':'share-discription-hide'}}">
    <cover-view class="title">{{shareTitle}}</cover-view>
    <cover-view class="content">
      <cover-view class="content-text">{{shareContent1}}</cover-view>
      <cover-view class="content-text">{{shareContent2}}</cover-view>
      <cover-view class="content-text">{{shareContent3}}</cover-view>
      <cover-view class="content-text">{{shareContent4}}</cover-view>
    </cover-view>
  </cover-view>
  <cover-view class="{{parkDiscription?'park-discription-show':'park-discription-hide'}}">
    <cover-view class="title">{{parkTitle}}</cover-view>
    <cover-view class="content">
      <cover-view class="content-text">{{parkContent1}}</cover-view>
      <cover-view class="content-text">{{parkContent2}}</cover-view>
      <cover-view class="content-text">{{parkContent3}}</cover-view>
      <cover-view class="content-text">{{parkContent4}}</cover-view>
    </cover-view>
  </cover-view>
</map>